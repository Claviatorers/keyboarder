<GridPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="common.auth.AuthorizationController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="105.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="238.0" minWidth="10.0" prefWidth="195.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="134.0" minHeight="10.0" prefHeight="124.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="71.0" minHeight="10.0" prefHeight="58.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="70.0" minHeight="10.0" prefHeight="53.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="124.0" minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <Label prefHeight="20.0" prefWidth="45.0" text="Логин" GridPane.halignment="LEFT" GridPane.valignment="BOTTOM">
        <GridPane.margin>
          <Insets left="50.0" />
        </GridPane.margin>
        <font>
          <Font size="14.0" />
        </font>
    </Label>
    <Label text="Пароль" GridPane.halignment="LEFT" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets left="50.0" />
        </GridPane.margin>
        <font>
          <Font size="14.0" />
        </font>
    </Label>
    <TextField id="login" fx:id="login" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="140.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
        <GridPane.margin>
          <Insets right="50.0" />
        </GridPane.margin>
    </TextField>
    <PasswordField id="password" fx:id="password" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="140.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets right="50.0" />
        </GridPane.margin>
    </PasswordField>
    <Button mnemonicParsing="false" onAction="#enter" prefHeight="25.0" prefWidth="121.0" text="Вход" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
    <Button mnemonicParsing="false" onAction="#toRegistration" prefHeight="25.0" prefWidth="125.0" text="Регистрация" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP" />
   <ImageView fitHeight="65.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images/logo.png" />
      </image>
      <GridPane.margin>
         <Insets left="50.0" />
      </GridPane.margin></ImageView>
</GridPane>
