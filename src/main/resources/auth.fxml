        <menus>
            <Menu mnemonicParsing="false" text="Помощь">
                <items>
                <MenuItem mnemonicParsing="false" onAction="#help" text="Справка" />
                </items>
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#info" text="О разработчиках" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
